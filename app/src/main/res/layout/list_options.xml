<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listOptions_navigationView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:fitsSystemWindows="false"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/listOptions_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <uk.whitecrescent.waqti.frontend.customview.OptionsItem
                android:id="@+id/listHeaderColor_listOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="4dp"
                app:color="@color/md_grey_200"
                app:image="@drawable/menu_icon"
                app:radius="12dp"
                app:text="List Header Color" />

            <uk.whitecrescent.waqti.frontend.customview.OptionsItem
                android:id="@+id/cardColor_listOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="8dp"
                app:color="@color/md_grey_200"
                app:image="@drawable/card_icon"
                app:radius="12dp"
                app:text="Card Color" />

            <View style="@style/Divider.Horizontal" />

            <uk.whitecrescent.waqti.frontend.customview.OptionsItem
                android:id="@+id/clearList_listOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                app:color="@color/md_red_600"
                app:image="@drawable/clear_icon"
                app:radius="12dp"
                app:text="@string/clearList" />

            <uk.whitecrescent.waqti.frontend.customview.OptionsItem
                android:id="@+id/deleteList_listOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                app:color="@color/errorColor"
                app:image="@drawable/delete_icon"
                app:radius="12dp"
                app:text="@string/deleteList" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.google.android.material.navigation.NavigationView>