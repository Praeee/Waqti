<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/taskOptions_navigationView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View style="@style/Divider.Horizontal" />

            <uk.whitecrescent.waqti.frontend.customview.OptionsItem
                android:id="@+id/deleteTask_taskOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="4dp"
                app:color="@color/errorColor"
                app:image="@drawable/delete_icon"
                app:radius="8dp"
                app:text="@string/deleteTask" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.google.android.material.navigation.NavigationView>